@model OidcErrorDto
@using OpenIdDictMvcLib.Dto;
@using OpenIdDictMvcLib.Localizers;
@using Microsoft.AspNetCore.Mvc.Localization;
@inject IHtmlLocalizer<OpenIddictLocalizerResource> SharedLocalizer


<div class="jumbotron">
    <h2>@SharedLocalizer["Ooooops, something went really bad! :("]</h2>
    <p class="lead text-start">
        @if (!string.IsNullOrEmpty(Model.Error))
        {
            <strong>@Model.Error</strong>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorDescription))
        {
            <small>@Model.ErrorDescription</small>
        }
    </p>
</div>