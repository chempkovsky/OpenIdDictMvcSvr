@model OpenIdDictMvcLib.Dto.OpenIddictTokenDto
@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization
@using Microsoft.AspNetCore.Localization;
@using OpenIdDictMvcLib.Dto;
@using OpenIdDictMvcLib.Localizers;
@inject IHtmlLocalizer<OpenIddictTokenLocalizerResource> SharedLocalizer

@{
    ViewData["Title"] = SharedLocalizer["Detail"];
    string IdType = ViewBag.IdType ?? "";
    string PrntId = (ViewBag.PrntId ?? "").Trim();
    string AppId = ViewBag.AppId ?? "";
}

@if ((IdType == "auth") && (!string.IsNullOrEmpty(PrntId)))
{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">@SharedLocalizer["Home"]</a></li>
            <li class="breadcrumb-item"><a asp-controller="OpenIddictApps" asp-action="Index">@SharedLocalizer["Applications"]</a></li>
            <li class="breadcrumb-item"><a asp-controller="OpenIddictAuthorizations" asp-action="Index" asp-route-appid="@AppId">@SharedLocalizer["Authorizations"]</a></li>
            <li class="breadcrumb-item"><a asp-controller="OpenIddictTokens" asp-action="Index" asp-route-idtype="@IdType" asp-route-prntid="@PrntId">@SharedLocalizer["Authorization Tokens"]</a></li>
            <li class="breadcrumb-item active" aria-current="page">@SharedLocalizer["Detail"]</li>
        </ol>
    </nav>
    
}
else if ((IdType == "app") && (!string.IsNullOrEmpty(PrntId)))
{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">@SharedLocalizer["Home"]</a></li>
            <li class="breadcrumb-item"><a asp-controller="OpenIddictApps" asp-action="Index">@SharedLocalizer["Applications"]</a></li>
            <li class="breadcrumb-item"><a asp-controller="OpenIddictTokens" asp-action="Index" asp-route-idtype="@IdType" asp-route-prntid="@PrntId">@SharedLocalizer["Application Tokens"]</a></li>
            <li class="breadcrumb-item active" aria-current="page">@SharedLocalizer["Detail"]</li>
        </ol>
    </nav>
    
}



<h1>@SharedLocalizer["Detail"]</h1>

<div>
    <h4>OpenIddictTokenDto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApplicationId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorizationId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuthorizationId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExpirationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExpirationDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RedemptionDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RedemptionDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReferenceId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReferenceId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TokenType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TokenType)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" asp-route-idtype="@IdType" asp-route-prntid="@PrntId">@SharedLocalizer["Back to List"]</a>
</div>
